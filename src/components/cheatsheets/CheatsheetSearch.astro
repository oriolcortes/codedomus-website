---
const { placeholder = "Buscar…", helperText = "Filtra por elemento, descripción o sección." } =
  Astro.props;
---

<div class="mx-auto max-w-md">
  <label class="mb-1 block text-sm font-medium text-gray-700">
    {placeholder}
  </label>
  <input
    type="text"
    placeholder={placeholder}
    class="w-full rounded-xl border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    data-search
    autofocus
  />
  <p class="mt-1 text-xs text-gray-400">{helperText}</p>
</div>
